@model Botomag.Web.Models.Account.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}

<div class="container">
    <h2>Регистрация</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="form-group">
            @Html.LabelFor(n => n.Email)
            @Html.TextBoxFor(n => n.Email, new { @class = "form-control", type = "email" })
        </div>
        <div class="form-group">
            @Html.LabelFor(n => n.Password)
            @Html.PasswordFor(n => n.Password, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(n => n.ConfirmPassword)
            @Html.PasswordFor(n => n.ConfirmPassword, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-default">Зарегистрироваться</button>
    }
</div>
