@model Botomag.Web.Models.Account.LoginViewModel
@{
    ViewBag.Title = "Вход";
}

<div class="container">
    <h2>Вход</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="form-group">
            @Html.LabelFor(n => n.Email)
            @Html.TextBoxFor(n => n.Email, new { @class = "form-control", type = "email" })
        </div>
        <div class="form-group">
            @Html.LabelFor(n => n.Password)
            @Html.PasswordFor(n => n.Password, new { @class = "form-control" })
        </div>
        <div class="checkbox">
            <label>
                @Html.CheckBoxFor(n => n.IsPersistent) @Html.DisplayNameFor(n => n.IsPersistent)
            </label>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-default">Войти</button>
        </div>
        <div class="form-group">
            @Html.ActionLink("Регистрация", "Register", new { returnUrl = Request.QueryString["returnUrl"] })
        </div>
    }
</div>

